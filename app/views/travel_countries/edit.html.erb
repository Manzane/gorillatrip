<h1>Modifie la destination</h1>

<%= simple_form_for [@travel, @stay] do |f| %>
  <div>
    <%= f.input :country_id, collection: @countries, label_method: :french_name, value_method: :id, label: 'Pays', include_blank: 'Choisir un pays' %>
    <%= f.input :start_date, :as => :hidden, input_html: {class: "datePicker"}, label: 'Date de début du Séjour' %>
    <%= f.input :end_date, :as => :hidden, input_html: {class: "datePicker"}, label: 'Date de fin du Séjour' %>
  </div>
  <%= f.submit %>
<% end %>

<%= link_to travel_path(@travel) do %>
  <p>Retour</p>
  <% end %>
