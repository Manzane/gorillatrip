<h1><%= t('.title') %></h1>
<div id="datepickr-form">
  <%= simple_form_for [@travel, @stay] do |f| %>
    <div id="flat-pckr">
      <%= f.input :country_id, collection: @continents,
                    :as => :grouped_select,
                    :group_method => :countries,
                    :group_label_method => :fr_name,
                    label_method: :french_name, value_method: :id,
                    label: t('.country'), include_blank: t('.choice'),
                    input_html: {class: "select2"}, disabled: true %>
      <%= f.input :start_date, :as => :hidden, input_html: {class: "datePicker", id:"start"}, label: t('.start') %>
      <%= f.input :end_date, :as => :hidden, input_html: {class: "datePicker", id:"end"}, label: t('.end') %>
    </div>
    <%= f.submit t('.update') %>
  <% end %>
</div>

<%= link_to travel_path(@travel) do %>
  <p><%= t('.back') %></p>
  <% end %>
