<h1><%= t('.title') %></h1>
<p></p>

<% @travels.each do |travel| %>
  <div>
    <%= link_to travel_path(travel) do %>
      <%= travel.name %>
      <% if travel.travel_start_date && travel.travel_end_date %>
        du <%= l travel.travel_start_date %>
        au <%= l travel.travel_end_date %>
      <% end %>
    <% end %>
  </div>
  <% end %>

<%= link_to new_travel_path do %>
  <p><%= t('.add') %></p>
<% end %>

<%= link_to documents_path do %>
  <p><%= t('.documents') %></p>
  <% end %>



