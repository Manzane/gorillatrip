<div id="header"></div>
<div class="global-container">
  <div class="id-card">
    <%= link_to edit_user_registration_path do %>
      <%= image_tag("blue-menu.svg", class:"menu") %>
    <% end %>
    <%= image_tag("#{user_avatar(@user)}", class:"avatar") %>
    <div class="content">
      <div>
        <h4><%= @user.username %></h4>
        <p><%= @user.nationality %></p>
      </div>
      <div>
        <p><% if ! @user.date_of_birth.nil? %> <%= @user.def_age %> <%= t(".years-old") %><% end %></p>
        <p><%= @user.phone_number %></p>
      </div>
    </div>
  </div>

  <div id="container-add-travel">
    <%= link_to new_travel_path do %>
      <div class="pink-card" id="add-travel">
          <h4><%= t('.add') %></h4>
          <p><%= t('.sub_add') %></p>
          <svg class="plus" fill="currentColor" viewBox="0 0 20 20"><path d="M10 18a8 8 0 100-16 8 8 0 000 16zm1-11a1 1 0 10-2 0v2H7a1 1 0 100 2h2v2a1 1 0 102 0v-2h2a1 1 0 100-2h-2V7z" clip-rule="evenodd" fill-rule="evenodd"></path></svg>
      </div>
    <% end %>
  </div>

  <h2 class="title"><%= t('.title') %></h2>
  <div id="container-travels" style="grid-template-columns: 4% repeat(<%= @travels.count %>, calc(50% - 4%)) 4%;">
    <% @travels.each do |travel| %>
      <div class="container-travel-cards">
        <%= link_to travel_path(travel) do %>
          <div class="travel-card">
            <h4><%= travel.name %></h4>
            <% if travel.travel_start_date && travel.travel_end_date %>
              <p><%= l travel.travel_start_date %> - <%= l travel.travel_end_date %></p>
            <% end %>
          </div>
        <% end %>
      </div>
    <% end %>
  </div>

  <div id="container-documents">
    <%= link_to documents_path do %>
      <div class="pink-card" id="documents">
          <h4><%= t('.documents') %></h4>
          <p><%= t('.sub_documents') %></p>
          <svg class="lock" fill="currentColor" viewBox="0 0 20 20"><path d="M5 9V7a5 5 0 0110 0v2a2 2 0 012 2v5a2 2 0 01-2 2H5a2 2 0 01-2-2v-5a2 2 0 012-2zm8-2v2H7V7a3 3 0 016 0z" clip-rule="evenodd" fill-rule="evenodd"></path></svg>
      </div>
    <% end %>
  </div>
</div>
