<div id="header"></div>
<div class="global-container">
  <div class="id-card">
    <%= link_to edit_user_registration_path do %>
      <%= image_tag("blue-menu.svg", class:"menu") %>
    <% end %>
    <% if @user.avatar.attached? %>
      <%= cl_image_tag("#{user_avatar(@user)}", class:"avatar") %>
    <% else %>
      <%= image_tag("#{user_avatar(@user)}", class:"avatar") %>
    <% end %>
    <div class="content">
      <div>
        <h4><%= @user.username %></h4>
        <p><%= @user.nationality %></p>
      </div>
      <div>
        <p><% if ! @user.date_of_birth.nil? %> <%= @user.def_age %> <%= t(".years-old") %><% end %></p>
        <p><%= @user.phone_number %></p>
      </div>
    </div>
  </div>

  <div id="container-add-travel">
    <%= link_to new_travel_path do %>
      <div class="pink-card" id="add-travel">
          <h4><%= t('.add') %></h4>
          <p><%= t('.sub_add') %></p>
          <%= image_tag("plus.svg", class:"plus") %>
      </div>
    <% end %>
  </div>

  <h2 id="title"><%= t('.title') %></h2>
  <div id="container-travels" style="grid-template-columns: 4% repeat(<%= @travels.count %>, calc(50% - 4%)) 4%;">
    <% @travels.each do |travel| %>
      <div class="container-travel-cards">
        <%= link_to travel_path(travel) do %>
          <div class="travel-card">
            <h4><%= travel.name %></h4>
            <% if travel.travel_start_date && travel.travel_end_date %>
              <p><%= l travel.travel_start_date %> - <%= l travel.travel_end_date %></p>
            <% end %>
          </div>
        <% end %>
      </div>
    <% end %>
  </div>

  <div id="container-documents">
    <%= link_to documents_path do %>
      <div class="pink-card" id="documents">
          <h4><%= t('.documents') %></h4>
          <p><%= t('.sub_documents') %></p>
          <%= image_tag("lock.svg", class:"lock") %>
      </div>
    <% end %>
  </div>
</div>
